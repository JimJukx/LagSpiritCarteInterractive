    /* ===== MOBILE PATCH ===== */
    @media (max-width: 600px){

      /* 1) Listes: afficher seulement JJ/MM */
      .lag-item-sub{
        font-size: 12px;
      }
      .lag-item-sub{
        /* On masque le texte long et on affiche data-short */
        color: transparent !important;
        position: relative;
      }
