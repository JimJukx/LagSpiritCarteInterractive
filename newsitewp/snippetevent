        color: rgba(255,255,255,.78) !important;
        position: absolute;
        left: 0;
        top: 0;
      }

      /* 2) Fiche détaillée: date sous le titre (au lieu d'à droite) */
      .lag-ev-top{
        flex-direction: column;
        align-items: flex-start;
      }
      .lag-ev-date{
        margin-top: 8px;
        align-self: flex-start;
        white-space: normal;
      }

      /* 3) Bouton inscription: ne dépasse jamais, texte adaptatif */
      .lag-ev-actions{
        justify-content: stretch;
      }
      .lag-ev-rightbtn{
        width: 100%;
      }
      .lag-ev-btn{
        width: 100%;
        max-width: 100%;
        white-space: normal;      /* autorise 2 lignes */
        line-height: 1.1;
        text-align: center;
        padding: 10px 12px;
      }

      /* Si le bouton est "Inscription prochainement", on raccourcit automatiquement */
      .lag-ev-btn[data-lag-soon="1"]{
        font-size: 14px;
      }
      .lag-ev-btn[data-lag-soon="1"]::after{
        content: "Inscription proch.";
      }
      .lag-ev-btn[data-lag-soon="1"]{
        color: transparent !important;
        position: relative;
      }
      .lag-ev-btn[data-lag-soon="1"]::after{
        color: rgba(255,255,255,.95);
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 10px;
      }
